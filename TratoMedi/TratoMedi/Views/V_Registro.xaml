<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TratoMedi.Views.V_Registro" Title="Registro">
    <ContentPage.Content>
        <ScrollView x:Name="ScrollTodo">
            <StackLayout>
                <Label Text="Nombres"/>
                <Entry x:Name="EntNombre"/>
                <Label Text="Apellido"/>
                <Entry x:Name="EntApe"/>
                <Label Text="Sexo"/>
                <Picker x:Name="PickSexo">
                    <Picker.Items>
                        <x:String>Masculino</x:String>
                        <x:String>Femenino</x:String>
                    </Picker.Items>
                </Picker>
                <Label Text="Titulo"/>
                <Picker x:Name="PickTitulo" Title="Titulos sugeridos"/>
                <Label Text="Especialidad"/>
                <Picker x:Name="PickEspe" Title="Especialidades sugeridas"/>
                <Label Text="Domicilio para realizar consultas"/>
                <Entry x:Name="EntDom"/>
                <Label Text="Ciudad"/>
                <Picker x:Name="PickCiudad" Title="Ciudades sugeridas"/>
                <Label Text="Cédula profesional"/>
                <Entry x:Name="EntCedula" />
                <Button Text="Revisar Información" Clicked="Fn_Avanzar"/>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>